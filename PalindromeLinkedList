import java.util.ArrayList;
public class PalindromeLinkedList { 

Node head; 

public PalindromeLinkedList(){ 
 head = null;
 }

//Inserts node x at the head and returns the new head 

public Node listInsert(Node head, Node x){
x.next = head; 
head = x;
return x; 
} 





public void printList(Node head ){

Node current  = head ; 

while ( current != null ) { 
 System.out.print( current.key + "   " );
  current=current.next;
} 

System.out.println();
} 


public boolean checkPalindrome(Node head){
//create an arraylist holding all values from the linked list
ArrayList<Integer> data = new ArrayList<Integer> (); 

Node current = head; 
while ( current != null) { 
data.add(current.key); 
current = current.next; 
} 
int i = 0 ; 
int j = data.size()-1;

while( i < j ) { 
if (!data.get(i).equals(data.get(j))){ 
   return false; 

} 
i++;
j--;

} 

return true; 


} 


public static void main (String [] args ){ 

PalindromeLinkedList list = new PalindromeLinkedList(); 

Node head1 = null; 

// create and checking 1 → 2 → 3 → 2 → 1 → Palindrome
head1=list.listInsert(head1, new Node(1));
head1=list.listInsert(head1, new Node(2));
head1=list.listInsert(head1, new Node(3)); 
head1=list.listInsert(head1, new Node(2));
head1=list.listInsert(head1, new Node(1));

System.out.println(" Case 1 : ");
list.printList(head1);

Boolean isPalindrome = list.checkPalindrome(head1); 

System.out.println("For this list isPlaindrome returend "+isPalindrome);



//CASE 2

// create and checking 10 → 20 → 20 → 10 → Palindrome
Node head2 = null; 
head2=list.listInsert(head2, new Node(10));
head2=list.listInsert(head2, new Node(20));
head2=list.listInsert(head2, new Node(20)); 
head2=list.listInsert(head1, new Node(10));


System.out.println(" Case 2 : ");
list.printList(head2);

Boolean isPalindrome2 = list.checkPalindrome(head2); 

System.out.println("For this list isPlaindrome returend "+isPalindrome2);


//CASE 3 

//create and checking 5 → 10 → 17 → Not a palindrome

Node head3 = null; 
head3=list.listInsert(head3, new Node(5));
head3=list.listInsert(head3, new Node(10));
head3=list.listInsert(head3, new Node(17)); 



System.out.println(" Case 3 : ");
list.printList(head3);

Boolean isPalindrome3 = list.checkPalindrome(head3); 

System.out.println("For this list isPlaindrome returend "+isPalindrome3);


}





} //end of class





class Node{

int key; 
Node next; 

public Node(int key) { 
this.key = key; 
this.next = null;
} 


}
