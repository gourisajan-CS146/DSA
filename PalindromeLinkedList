
public class PalindromeLinkedList { 

Node head; 

public PalindromeLinkedList(){ 
 head = null;
 }

//Inserts node x at the head and returns the new head 

public Node listInsert(Node head, Node x){
x.next = head; 
head = x;
return x; 
} 





public void printList(Node head ){

Node current  = head ; 

while ( current != null ) { 
 System.out.print( current.key + "   " );
  current=current.next;
} 

System.out.println();
} 


public boolean checkPalindrome(Node head){

ArrayList<Integer> data = new ArrayList<Integer> (); 

Node current = head; 
while ( current != null) { 
data.add(current.key); 
current = current.next; 
} 
} 


public static void main (String [] args ){ 

SinglyLinkedList list = new SinglyLinkedList(); 

Node head1 = null; 

// create and checking 1 → 2 → 3 → 2 → 1 → Palindrome
head1=list.listInsert(head1, new Node(1));
head1=list.listInsert(head1, new Node(2));
head1=list.listInsert(head1, new Node(3)); 
head1=list.listInsert(head1, new Node(2));
head1=list.listInsert(head1, new Node(1));

System.out.println(" Case 1 : ");
list.printList(head1);



System.out.println("The list :  "  );

list.printList(head);

//Search for a node and print whether it was found

Node nodeFound =  list.listSearch( head, 30);

if ( nodeFound != null ){ 
   System.out.println( " Node 30 is found " ) ;
 } 
else { 
    System.out.println( " 30 is not found " ) ; 
} 

//Delete one of the nodes (by passing the node reference)
head =list.listDelete( head, nodeFound);

//Print the list again to show the change
System.out.println("The new list  after deletion :  " );
list.printList(head);

} //end of class





class Node{

int key; 
Node next; 

public Node(int key) { 
this.key = key; 
this.next = null;
} 


}
